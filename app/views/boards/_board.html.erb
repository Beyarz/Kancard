<% @boards.each do |board| %>
  <div class="column is-one-third">
    <div class="box">
      <div class="title">
        <%= board.name %>
      </div>
      <div class="subtitle">
        <%= board.description %>
      </div>
      <div class="level">
        <div class="level-item">
          <%= link_to "Open", board_path(board), class: "button" %>
        </div>
        <div class="level-item">
          <%= link_to "Edit", edit_board_path(board), class: "button", disabled: (board.owner_id.to_i.eql?(@current_user.id.to_i) ? false : true) %>
        </div>
        <div class="level-item">
          <%= link_to "Delete", board_path(board), method: :delete, class: "button", disabled: (board.owner_id.to_i.eql?(@current_user.id.to_i) ? false : true) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
