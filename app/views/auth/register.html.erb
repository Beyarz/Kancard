<div class="container" style="padding-top: 3rem;">
  <div class="container skew-style-register">

    <figure style="position: fixed; padding-left: 8vw; top: 60vh;">
      <%= image_tag "group-register-eclipse.svg", :alt => "dots"  %>
    </figure>

    <div class="columns">
      <div class="column"></div>

      <div class="column is-two-fifths">
        <div class="container form-style-auth has-background-white">
          <h1 class="title">Register</h1>
          <br />

          <label class="label" for="username">Username</label>
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="text"
                class="input"
                id="username"
                placeholder="Jonas123"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
          </div>

          <label class="label" for="email" style="padding-top: 2rem;"
            >Email</label
          >
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="text"
                class="input"
                id="email"
                placeholder="Jonas123@email.se"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <label class="label" for="confirm-email">Confirm email</label>
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="text"
                class="input"
                id="confirm-email"
                placeholder="Jonas123@email.se"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <label class="label" for="password" style="padding-top: 2rem;"
            >Password</label
          >
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="password"
                id="password"
                class="input"
                placeholder="********"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>

          <label class="label" for="confirm-password"
            >Confirm password</label
          >
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="password"
                class="input"
                id="confirm-password"
                placeholder="********"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>

            <div class="field is-grouped is-grouped-centered">
              <div class="control" style="padding-top: 3rem;">
                <b>
                  <%= link_to  "Back", auth_index_path, {:class => "button"} %>
                </b>
                <b>
                  <%= link_to  "Register", panel_dashboard_path, {:class => "button is-custom-blue"} %>
                </b>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-two-fifths"></div>
    </div>
  </div>
</div>
