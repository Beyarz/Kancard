<div class="container" style="padding-top: 3rem;">
  <div class="container skew-style-register">

    <figure style="position: fixed; padding-left: 8vw; top: 60vh;">
      <%= image_tag("group-register-eclipse.svg", :alt => "dots")  %>
    </figure>

    <div class="columns">
      <div class="column is-three-fifths is-offset-one-fifth">

        <div class="container form-style-auth has-background-white">
          <h1 class="title">Register</h1>
          <br />
          <%= form_with(model: @user) do |user| %>

            <div class="columns is-1">
              <div class="column">
                <div class="field">
                  <%= label_tag(:username, "Username", :class => "label") %>
                  <div class="control has-icons-left">
                    <%= text_field(:user, :name, :class => "input", :placeholder => "jonas123", :required => true, :min => 5, :max => 25) %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div class="column">
                <%= label_tag(:progress, "Progress", :class => "label") %>
                <progress id="form-progress-status" class="progress is-marginless" value="15" max="100"></progress>
                <p id="form-progress-message">You have to fill out the form!</p>
              </div>
            </div>

            <div class="columns is-1">
              <div class="column">
                <div class="field">
                  <%= label_tag(:email, "Email", :class => "label") %>
                  <div class="control has-icons-left">
                  <%= email_field(:user, :email, :type => "email", :class => "input", :placeholder => "jonas123@email.se", :required => true) %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div class="column">
                <div class="field">
                  <%= label_tag(:confirm_email, "Confirm email", :class => "label") %>
                  <div class="control has-icons-left">
                    <%= email_field(:user, :confirm_email, :type => "email", :class => "input", :placeholder => "jonas123@email.se", :required => true) %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                  </div>
                </div>
              </div>
            </diV>

            <div class="columns is-1">
              <div class="column">
                <div class="field">
                  <%= label_tag(:password, "Password", :class => "label") %>
                  <div class="control has-icons-left">
                    <%= password_field_tag(:user, :password, :type => "password", :class => "input", :placeholder => "********", :value => nil, required: true, :min => 5) %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div class="column">
                <div class="field">
                  <%= label_tag(:confirm_password, "Confirm password", :class => "label") %>
                  <div class="control has-icons-left">
                    <%= password_field_tag(:confirm_pa, :confirm_password, :type => "password", :class => "input", :placeholder => "********", :value => nil, required: true) %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                  </div>
                </div>
              </div>
            </diV>

            <div class="field is-grouped-centered is-grouped">
              <div class="control">
                <%= link_to("Back", auth_index_path, {:class => "button bold"}) %>
                <%= submit_tag("Register", {:class => "button is-custom-blue"}) %>
              </div>
            </div>

            <% end %>

            <div class="field is-grouped is-grouped-centered">
              <div class="control" style="padding-top: 1rem;">
                <%= link_to("Sign in with UNKOWN", nil, {:class => "button is-dark bold"}) %>
              </div>
            </div>
          </div>
        </diV>
      </div>
    </div>

  </div>
</div>
