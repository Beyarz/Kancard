<div class="container" style="padding-top: 3rem;">
  <div class="container skew-style-login">

    <figure style="position: fixed; padding-left: 8vw; top: 15vh;">
      <%= image_tag "group-login-eclipse.svg", :alt => "dots" %>
    </figure>

    <div class="columns">
      <div class="column is-one-fifth"></div>

      <div class="column">
        <div class="container form-style-auth has-background-white">
          <h1 class="title">Login</h1>
          <br />

          <label class="label" for="username">Username</label>
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="text"
                class="input"
                id="username"
                placeholder="Jonas123"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
            <p class="help">You can sign-in with your email too!</p>
          </div>

          <label class="label" for="password" style="padding-top: 2rem;"
            >Password</label
          >
          <div class="field">
            <div class="control has-icons-left">
              <input
                type="password"
                class="input"
                id="password"
                placeholder="Password"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>

            <div class="field is-grouped is-grouped-centered">
              <div class="control" style="padding-top: 3rem;">
                <b>
                  <%= link_to  "Back", auth_index_path, {:class => "button"} %>
                </b>

                <b>
                  <%= link_to  "Login", panel_dashboard_path, {:class => "button is-custom-blue"} %>
                </b>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-two-fifths"></div>
    </div>
  </div>
</div>
