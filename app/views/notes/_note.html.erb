<article class="column message is-half box"
  data-belongs-to="<%= note.parent_column_id %>"
  data-id="<%= note.id %>"
  data-board-id="<%= @board.id %>"
>
  <div class="message-body">
    <div class="content">
      <%= link_to nil, [note.board, note], method: :delete, :class => "delete has-text-weight-light is-pulled-right" %>
    </div>
    <div class="content">
      <p>
        <%= note.content %>
      </p>
    </div>
  </div>
</article>
