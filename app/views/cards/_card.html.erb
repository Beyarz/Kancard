<div class="column is-one-quarter">
  <div class="level" style="margin-bottom: 0">
    <div class="level-left">
      <h2 class="level-item title is-size-4 color-blue has-text-weight-light is-marginless">
        <%= card.title %>
      </h2>
    </div>
    <div class="level-right">
      <div class="level-item">
        <%= link_to "", [card.board, card], method: :delete, :class => "fas fa-trash-alt has-text-weight-light" %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-content column-row" ondrop="drop(event)" ondragover="event.preventDefault()">
      <% @board.notes.each do |note| %>
        <article class="message is-info is-small" id="<%= SecureRandom.hex(4).scan(/.{4}/).join("-") %>" draggable="true" ondragstart="drag(event)">
          <div class="message-body">
            <div class="level">
              <div class="level-left">
                <%= note.content %>
              </div>
              <div class="level-right">
                <%= link_to "", [note.board, note], method: :delete, :class => "fas fa-trash-alt has-text-weight-light is-pulled-right" %>
              </div>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
</div>
