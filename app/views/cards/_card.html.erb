<div class="column is-one-quarter">
  <div class="level">
    <div class="level-item">
      <h2 class="title is-size-4 color-blue has-text-weight-light is-marginless">
        <%= card.title %>
      </h2>
    </div>
    <div class="level-item">
      <span class="icon-text">
        <%= link_to "Delete", [card.board, card], method: :delete, :class => "is-size-6 has-text-weight-light" %>
        <span class="icon">
          <i class="fas fa-trash-alt"></i>
        </span>
      </span>
    </div>
  </div>
  <div class="card">
    <div class="card-content column-row" ondrop="drop(event)" ondragover="event.preventDefault()">
    </div>
  </div>
</div>
