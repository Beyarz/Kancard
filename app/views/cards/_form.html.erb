<%= form_with model: [@board, @board.cards.new] do |f| %>
  <% if @board.errors.any? %>
    <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div id="new-card">
    <div class="field">
      <%= f.label :title, class: "label" %>
      <div class="control has-icons-left">
        <%= f.text_field :title, class: "input", placeholder: "Todo", aria_required: true, required: true %>
        <span class="icon is-small is-left">
          <i class="fas fa-align-left"></i>
        </span>
      </div>
    </div>
  </div>

  <div class="field is-grouped is-grouped-centered">
    <div class="control" style="padding-top: 1rem;">
      <button type="reset" class="button bold" id="column-back-button">Back</button>
      <%= f.submit "Create", class: "button is-custom-blue", data: { disable_with: "Processing..." } %>
    </div>
  </div>
<% end %>
